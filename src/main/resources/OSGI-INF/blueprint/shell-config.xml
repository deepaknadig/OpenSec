<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="org.unl.cse.netgroup.AppCommand"/>
        </command>
        <command>
            <action class="org.unl.cse.netgroup.cli.CreateNetworkCmd"/>
        </command>
        <command>
            <action class="org.unl.cse.netgroup.cli.ListNetworkCommand"/>
        </command>
        <command>
            <action class="org.unl.cse.netgroup.cli.RemoveNetworkCommand"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="org.unl.cse.netgroup.cli.AddHostCommand"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <ref component-id="hostCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="org.unl.cse.netgroup.cli.RemoveHostCommand"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <ref component-id="hostCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

    <bean id="networkCompleter" class="org.unl.cse.netgroup.cli.NetworkCompleter"/>
    <bean id="hostCompleter" class="org.onosproject.cli.net.HostIdCompleter"/>

</blueprint>
